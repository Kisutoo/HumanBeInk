{% extends 'base.html.twig' %}

{% block title %}Flash | WannaDo {% endblock %}

{% block body %}


    {% if app.user is not null and "ROLE_ADMIN" in app.user.roles %}

        <dialog class="popupAddFlash">
            <div class="croixPopupFlash">
                <div class="rec1"></div>
                <div class="rec2"></div>
            </div>
            <div class="flashForm">
                {{ form_start(flash_form) }}
                <div class="flashFormSection">
                    {{ form_row(flash_form.name) }}
                    {{ form_row(flash_form.color) }}
                </div>
                <div class="flashFormSection">
                    {{ form_row(flash_form.size) }}
                    {{ form_row(flash_form.category) }}
                </div>
                <div class="flashFormSection">
                    {{ form_row(flash_form.image) }}
                </div>
                <div class="divBtnAddFlashForm">
                    <button type="submit" class="btn"><p class="goldPolice">Ajouter</p></button>
                </div>
                {{ form_end(flash_form) }}
            </div>
        </dialog>
    
    {% endif %}

        

        <dialog class="popupAddFlash popupDetailFlash hidden">
            <div class="croixPopupFlash croixFlash2">
                <div class="rec1"></div>
                <div class="rec2"></div>
            </div>
            <div class="divDetImage">
                <img class="detImage" src="" alt="">
            </div>
            <div class="buttons">
            {% if app.user is not null %}
                <a href="#" class="btn">
                    <p class="goldPolice">Ajouter aux favoris</p>
                </a>
            {% endif %}
                <a href="#" class="btn">
                    <p class="goldPolice">Contacter avec ce flash</p>
                </a>
            </div>
        </dialog>
    
    


    <div class="homePageTotal">
        <div class="fondHomePage">
        </div>
        <div class="fondHomeCalque fondNoise">
        </div>
        <div class="homePage">
            <a  href="{{ path("app_accueil") }}"><img class="logo" src="{{ asset("img/logo-HBI.webp")}}" alt="Logo de l'entreprise Human Be Ink"></a>
            <h1 class="titre goldPolice">Human Be Ink</h1>
            <h2 class="sousTitre goldPolice">Flash | WannaDo</h2>
            <div class="btnHomePage">
                <a href="#"><button class="btn"><p class="goldPolice">Mon Univers</p></button></a>
                <a href="#"><button class="btn"><p class="goldPolice">Prendre Contact</p></button></a>
            </div>
        </div>
        <div class="scroll-down"></div>
    </div>
    <div class="progress-container">
        <div id="progress-bar"></div>
    </div>

    <div class="flashDef">
        <h2 class="goldPolice">Qu'est-ce qu'un Flash ?</h2>
        <p class="defFlash">Un tattoo flash est un motif de tatouage pré-dessiné, imaginé par le tatoueur, prêt à être tatoué <bold>tel quel</bold>. Ces designs sont souvent exposés en salon ou publiés sur mes réseaux, et ils permettent de se faire tatouer plus rapidement et à un <bold>tarif plus accessible</bold> qu’un tatouage personnalisé. A noter qu’ils sont uniques et ne peuvent être tatoués qu’<bold>une seule fois par personne</bold>.</p>
    </div>


 


    <div class="flashContainerTotal">
        <h2 class="goldPolice titreFlash">Flashs Disponibles</h2>
        {% if app.user is not null and "ROLE_ADMIN" in app.user.roles %}
            <button class="btn btnAddFlash">
                <p class="goldPolice">Ajouter Flash</p>
            </button>
        {% endif %}

        <div class="flashContainer">
            {% for flash in flashs %}
                <img class="pointer flash" index="{{ flash.id }}" src="{{ asset( 'img/flashs/' ~ flash.image ~'?fm=webp' ) }}" alt="Tatouage de {{ flash.nom }}">
            {% endfor %}
        </div>

{% endblock %}
