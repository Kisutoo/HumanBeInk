{% extends 'base.html.twig' %}

{% block title %}Flash | WannaDo {% endblock %}

{% block body %}

<div class="dialogContainerAddFlash">
    {% include "flash/_flashDialogAddFlash.html.twig" %}
</div>
<div class="dialogContainerDetailFlash">
    {% include "flash/_flashDialogDetailFlash.html.twig" with { likedFlashsId: likedFlashs } %}
</div>
<div class="dialogContainerFilter">
    {% include "flash/_flashDialogFilter.html.twig" %}
</div>

    


    <div class="homePageTotal">
        <div class="homePage2">
            <div class="btnHomePageBlur">
                <a class="btnHome" href="{{ path("app_accueil")}}#galerie"><button class="btn" tabindex="4"><p class="goldPolice">{{ "home.btn1" | trans }}</p></button></a>
                <h2 class="sousTitre goldPolice">Flash | WannaDo</h2>
                <a class="btnHome" href="{{ path("app_contact")}}" tabindex="5"><button class="btn"><p class="goldPolice">{{ "home.btn2" | trans }}</p></button></a>
            </div>
        </div>
        <a href="#defFlash" tabindex="6"><div class="scroll-down"></div></a>
        <div class="fondBlur2 fondBlur" loading="lazy">
            <div class="fondNoise"></div>
        </div>
    </div>
    <div class="progress-container">
        <div id="progress-bar"></div>
    </div>

    <article id="defFlash" class="flashDef">
        <div class="paragrapheFlash">
            <h2 class="goldPolice">{{ "flash.titre1" | trans }}</h2>
            <p class="defFlash">{{ "flash.description_1" | trans }}</p>
        </div>
        <div class="illustrationFlash">
            <tilt-card>
                <img class="" src="{{ asset("../img/flash8.webp")}}" alt="Image d'un tatouage" loading="lazy">
            </tilt-card>
        </div>
    </article>



    <div class="flashContainerTotal">

        <h2 class="goldPolice titreFlash">{{ "flash.titre2" | trans }}</h2>

        {% if app.user is not null and "ROLE_ADMIN" in app.user.roles %}
            <button class="btn btnAddFlash">
                <p class="goldPolice">Ajouter Flash</p>
            </button>
        {% endif %}


        <div class="btnFiltresContainer" >
            <div class="btn btnShowFilters" tabindex="7">
                <p class="goldPolice">{{ "flash.btnFiltre" | trans }}</p>
                <div class="filterIcon">
                    <div class="filterBarTop">
                        <div class="rectangle rectangleFilter1"></div>
                        <div class="carre"></div>
                    </div>
                    <div class="filterBarTop">
                        <div class="rectangle rectangleFilter1"></div>
                        <div class="carre carre2"></div>
                    </div>
                    <div class="filterBarTop">
                        <div class="rectangle rectangleFilter1"></div>
                        <div class="carre"></div>
                    </div>
                </div>
            </div> 
        </div>

        <div id="flash-container">
            {% include "flash/_flashContainer.html.twig" with { flashs: flashs, maxPages: maxPages } %}
        </div>
    </div>

    <article id="wannaDo" class="homePageTotal flashDef defWannaDo">
        <h2 class="titre goldPolice WannaDoTitre">WannaDo</h2>
        <div class="divWannaDo">
            <h2 class="goldPolice titreDefWannaDo">{{ "flash.titreWannaDo" | trans }}</h2>
            <p class="defFlash">{{ "flash.description_1" | trans }}</p>
        </div>
        <div class="fondBlur3 fondBlur" loading="lazy">
            <div class="fondNoise"></div>
        </div>
    </article>

    

    
    
{% endblock %}
{% block footer %}
    {% include "_footer.html.twig" %}
{% endblock %}



